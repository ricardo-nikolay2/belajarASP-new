@{
}


<h1>Tambah Nama</h1>


<div class="row">
    <div class="cols-6">
        <div class="card">
            <div class="card-header">
                <h5>Tambah Nama</h5>

            </div>
            <div class="card-body">
                <form asp-controller="HaloDunia" asp-action="TambahNama" method="post">

                        <div class="mb-3">
                            <label class="col-form-label">Nama</label>
                            <input asp-for=Nama type="text" class="form-control" />
                        <span asp-validation-for="Nama"></span> @* asp-validation-for sintak untuk validation *@

                        </div>

                    <div class="mb-3">
                        <label class="col-form-label">Usia</label>
                        <input asp-for="Usia" type="number" class="form-control" />
                        <span asp-validation-for="Usia" ></span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>

                </form>
            </div>
            <div class="card-footer">

            </div>
        </div>
    </div>

</div>


